<gridProductDescriptions>
  <default>
    <matches>
      <match pattern="^ncom_relo_(alaska|amseas|haw|socal|useast).*">
        <filename />
      </match>
    </matches>

    <dataTime>
      <formattedRefTime dateFormat="yyyy-MM-dd HH:mm:ss">
        <attribute name="time_origin" />
      </formattedRefTime>
      <forecast units="HOURS">
        <variable name="tau" />
      </forecast>
    </dataTime>

    <level>
      <masterLevel>
        <value value="BSS" />
      </masterLevel>
      <levelOneValue>
        <variable name="depth" />
      </levelOneValue>
    </level>

    <coverage>
      <latLonGridCoverage />
      <coordinateLists>
        <latitude>
          <variable name="lat" />
        </latitude>
        <longitude>
          <variable name="lon" />
        </longitude>
      </coordinateLists>
    </coverage>
  </default>

    <!-- Eastward -->
  <description>
    <data>
      <variable name="water_u" />
    </data>
    <parameter>
      <abbreviation>
        <value value="UOGRD" />
      </abbreviation>
      <name>
        <value value="u-component of current" />
      </name>
      <units>
        <value value="m/s" />
      </units>
    </parameter>
  </description>

    <!-- Northward -->
  <description>
    <data>
      <variable name="water_v" />
    </data>
    <parameter>
      <abbreviation>
        <value value="VOGRD" />
      </abbreviation>
      <name>
        <value value="v-component of current" />
      </name>
      <units>
        <value value="m/s" />
      </units>
    </parameter>
  </description>

  <description>
    <data>
      <variable name="water_temp" />
    </data>
    <parameter>
      <abbreviation>
        <value value="T" />
      </abbreviation>
      <name>
        <value value="Temperature" />
      </name>
      <units>
        <value value="C" />
      </units>
    </parameter>
  </description>

  <description>
    <data>
      <variable name="salinity" />
    </data>
    <parameter>
      <abbreviation>
        <value value="SALIN" />
      </abbreviation>
      <name>
        <value value="Practical Salinity" />
      </name>
      <units>
        <value value="PSU" />
      </units>
    </parameter>
  </description>

    <!-- NCOM-HAWII's dataset id is slightly different from the filename -->
  <description>
    <matches>
      <match pattern="^ncom_relo_haw.*">
        <filename />
      </match>
    </matches>

    <datasetId>
      <value value="NCOM-HAWAII" />
    </datasetId>
  </description>
  
  <description>
    <matches>
        <match pattern="^ncom_relo_(alaska|amseas|socal|useast).*">
            <filename />
        </match>
    </matches>
    
    <datasetId>
      <pattern inputPattern="^ncom_relo_(alaska|amseas|socal|useast).*" outputFormat="NCOM-%S">
        <filename />
      </pattern>
    </datasetId>
  </description>
</gridProductDescriptions>
