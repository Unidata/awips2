<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="nctafDecoder" class="gov.noaa.nws.ncep.edex.plugin.nctaf.decoder.NcTafDecoder" />

    <bean id="nctafToPointData" class="gov.noaa.nws.ncep.common.dataplugin.nctaf.dao.NcTafToPointData" />
	
	<bean id="nctafSeparator" class="gov.noaa.nws.ncep.edex.plugin.nctaf.decoder.NcTafSeparator" />

	<bean id="nctafDistRegistry" factory-bean="distributionSrv"
		factory-method="register">
		<constructor-arg value="nctaf" />
		<constructor-arg value="jms-durable:queue:Ingest.nctaf"/>
	</bean>

    <bean id="nctafCamelRegistered" factory-bean="contextManager"
		factory-method="register" depends-on="persistCamelRegistered">
		<constructor-arg ref="nctaf-camel"/>
  	</bean>  

	<camelContext id="nctaf-camel"
		xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler"
		autoStartup="false">
		<!--
		<endpoint id="nctafFileEndpoint" uri="file:${edex.home}/data/sbn/nctaf?noop=true&amp;idempotent=false" />

		<route id="nctafFileConsumerRoute">
			<from ref="nctafFileEndpoint" />
			<bean ref="fileToString" />
			<setHeader headerName="pluginName">
				<constant>nctaf</constant>
			</setHeader>
			<to uri="jms-durable:queue:Ingest.nctaf" />
		</route>
		-->

		<!-- Begin TAF routes -->
		<route id="nctafIngestRoute">
			<from uri="jms-durable:queue:Ingest.nctaf"/>
			<setHeader headerName="pluginName">
				<constant>nctaf</constant>
			</setHeader>
			<doTry>
				<pipeline>
					<bean ref="stringToFile" />
					<split streaming="true">
						<method bean="nctafSeparator" method="separate" />
						<doTry>
							<pipeline>
								<bean ref="nctafDecoder" method="decode" />
								<bean ref="nctafToPointData" method="toPointData" />					
								<to uri="direct-vm:persistIndexAlert" />
							</pipeline>
							<doCatch>
								<exception>java.lang.Throwable</exception>
								<to uri="log:nctaf?level=ERROR"/>
							</doCatch>
						</doTry>
					</split>
				</pipeline>
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:nctaf?level=ERROR"/>
				</doCatch>
			</doTry>
		</route>

	</camelContext>
			
</beans>