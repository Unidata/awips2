<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<resourceGroup xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   <resource>
      <loadProperties>
            <resourceType>PLAN_VIEW</resourceType>
      </loadProperties>
      <properties isSystemResource="false" isBlinking="false"
            isMapLayer="true" isHoverOn="false" opacity="1.0" isVisible="true" />
      <resourceData xsi:type="NC-OverlayResourceGroupData">
            <resource>
              <loadProperties>
                <resourceType>PLAN_VIEW</resourceType>
              </loadProperties>
              <properties isSystemResource="false" isBlinking="false"
                isMapLayer="true" isHoverOn="false" opacity="1.0" isVisible="true">
                <pdProps maxDisplayWidth="100000000" minDisplayWidth="0" />
              </properties>
              <resourceData xsi:type="NC-dbOverlayResourceData">
                <table>mapdata.world</table>
                <labelField>name</labelField>
                <mapName>World</mapName>
<!-- don't need this anymore
                <constraint>name not in ('CANADA', 'MEXICO', 'UNITED STATES, THE')</constraint>
-->                
              </resourceData>
            </resource>
            <resource>
              <loadProperties>
                <resourceType>PLAN_VIEW</resourceType>
              </loadProperties>
              <properties isSystemResource="false" isBlinking="false"
                isMapLayer="true" isHoverOn="false" opacity="1.0" isVisible="true">
                <pdProps maxDisplayWidth="100000000" minDisplayWidth="0" />
              </properties>
              <resourceData xsi:type="NC-dbOverlayResourceData">
                <table>mapdata.states</table>
                <labelField>name</labelField>
                <mapName>State Boundaries</mapName>
              </resourceData>
            </resource>
            <resource>
              <loadProperties>
                <resourceType>PLAN_VIEW</resourceType>
              </loadProperties>
              <properties isSystemResource="false" isBlinking="false"
                isMapLayer="true" isHoverOn="false" opacity="1.0" isVisible="true">
                <pdProps maxDisplayWidth="100000000" minDisplayWidth="0" />
              </properties>
              <resourceData xsi:type="NC-dbOverlayResourceData">
                <table>mapdata.canada</table>
                <labelField>name</labelField>
                <mapName>Canada</mapName>
              </resourceData>
            </resource>
            <resource>
              <loadProperties>
                <resourceType>PLAN_VIEW</resourceType>
              </loadProperties>
              <properties isSystemResource="false" isBlinking="false"
                isMapLayer="true" isHoverOn="false" opacity="1.0" isVisible="true">
                <pdProps maxDisplayWidth="1" minDisplayWidth="0" />
              </properties>
              <resourceData xsi:type="NC-dbOverlayResourceData">
                <table>mapdata.mexico</table>
                <labelField>name</labelField>
                <mapName>Mexico</mapName>
              </resourceData>
            </resource>
            <resource>
              <loadProperties>
                <resourceType>PLAN_VIEW</resourceType>
              </loadProperties>
 <!-- Counties are 'disabled'. To display set the maxDisplayWidth="100000000" -->          
              <properties isSystemResource="false" isBlinking="false"
                isMapLayer="true" isHoverOn="false" opacity="1.0" isVisible="true">
                <pdProps maxDisplayWidth="1" minDisplayWidth="0" />
              </properties>
              <resourceData xsi:type="NC-dbOverlayResourceData">
                <table>mapdata.county</table>
                <labelField>countyname</labelField>
                <mapName>County Boundaries</mapName>
              </resourceData>
            </resource>
            <mapName>${mapName}</mapName>
            <lineWidth>${lineWidth}</lineWidth>
            <lineStyle>${lineStyle}</lineStyle>
            <legendColor>${color}</legendColor>
            <color>${color}</color>
      </resourceData>
   </resource>
</resourceGroup>
